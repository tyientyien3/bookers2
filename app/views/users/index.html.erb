<div class="container">
  <div class="row">
    <!-- 左側 -->
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
      <br>
      <br>
      <br>
      <br>
      <table class="table">
        <thead>
          <tr>
            <!-- 本来は入力した名前が自動で入るようにする→name.test -->
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th>
              <%= current_user.introduction %>
            </th>

          </tr>
        </thead>
      </table>
      <div>
        <li class="col-xs-12 btn btn-default ">
          <%= link_to '', edit_user_path(current_user.id), class: "glyphicon glyphicon-wrench" %>
        </li>
      </div>
      <br>
      <br>

      <h2>New book</h2>
      <% if @book.errors.any? %>
      <div class="alert alert-warning">
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %> error </li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <%= form_for(@book, url: '/books') do |f| %>
      <div>Title</div>
      <%= f.text_field :title, :size=>"36" %>
      <div>Opinion</div>
      <%= f.text_area :body, :size=>"34" %>
      <br>
      <%= f.submit 'Create Book',class: "btn btn-primary btn-lg btn-block" %>

      <% end %>
    </div>
    <!-- 　右側　　　 -->
    <div class="col-xs-9">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
            </td>
            </th>
            <td><%= user.name  %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>