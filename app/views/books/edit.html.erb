
<div class="conrainer">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<!-- 付け加えたところ -->
			<% if @book.errors.any? %>
				 <div class="alert alert-warning">
				   <ul>
				     <% @book.errors.full_messages.each do |message| %>
				       <li><%= message %> error </li>
				     <% end %>
				   </ul>
				 </div>
			<% end %>
			<!--  -->

			<%= form_for(@book, url: "/books/#{@book.id}" ) do |f| %>
				    <div>Title</div>
				    <%= f.text_field :title, :size=>"98" %>
				    <div>Body</div>
				    <%= f.text_area :body, :size=>"97" %>
				    <br>
				    <%= f.submit 'Update Book',class: "btn btn-primary btn-lg btn-block" %>

				    <br>

			    <%= link_to "Show", book_path(@book) %>|
			    <%= link_to "Back", books_path %>
			<% end %>
		</div>
	</div>
</div>